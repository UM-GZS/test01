page {
  background: #F8F8F8;
}
.list {
  padding: 0 20rpx;
  background: #FFFFFF;
}
.list .list-item {
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #F8F8F8;
}
.list .list-item:last-child {
  border: none;
}
.list .list-item .list-avatar {
  width: 100rpx;
  height: 100rpx;
}
.list .list-item .list-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
.list .list-item .list-info {
  width: calc(100% - 130rpx);
}
.list .list-item .list-info .list-text {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list .list-item .list-info .list-text .list-name {
  font-size: 32rpx;
  color: #333333;
}
.list .list-item .list-info .list-text .list-time {
  font-size: 26rpx;
  color: #C1BEC1;
}
.list .list-item .list-info .list-content {
  padding-top: 10rpx;
  width: 100%;
  font-size: 26rpx;
  color: #C1BEC1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.null {
  width: 100%;
  height: 600rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.null image {
  width: 90rpx;
  height: 90rpx;
}
.null text {
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #C1BEC1;
}

