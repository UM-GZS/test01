page {
  background: #F8F8F8;
}
.head {
  padding: 0 20rpx;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FFFFFF;
}
.head .head-avatar {
  width: 120rpx;
  height: 120rpx;
}
.head .head-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
.head .head-info {
  width: calc(100% - 150rpx);
}
.head .head-info .head-name {
  width: 100%;
  font-size: 34rpx;
  color: #333333;
}
.head .head-info .head-text {
  padding-top: 10rpx;
  width: 100%;
  display: flex;
  align-items: center;
}
.head .head-info .head-text text {
  font-size: 26rpx;
  color: #C1BEC1;
}
.head .head-info .head-text text:nth-child(2) {
  padding-left: 20rpx;
}
.rate {
  margin-top: 20rpx;
  padding: 0 20rpx;
  background: #FFFFFF;
}
.rate .rate-title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #333333;
  border-bottom: 1px solid #F8F8F8;
}
.rate .rate-list {
  width: 100%;
}
.rate .rate-list .rate-item {
  padding-bottom: 40rpx;
  width: 100%;
  border-bottom: 1px solid #F8F8F8;
}
.rate .rate-list .rate-item .rate-info {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.rate .rate-list .rate-item .rate-info text {
  font-size: 30rpx;
  color: #333333;
}
.rate .rate-list .rate-item .rate-content {
  width: 100%;
  font-size: 28rpx;
  color: #333333;
}
.rate .rate-list .rate-item:last-child {
  border: none;
}
.null {
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.null image {
  width: 90rpx;
  height: 90rpx;
}
.null text {
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #C1BEC1;
}

