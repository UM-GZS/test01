page {
  background: #F8F8F8;
}
.banner {
  width: 100%;
}
.banner .swiper {
  width: 100%;
  height: 400rpx;
}
.banner .swiper image {
  width: 100%;
  height: 100%;
}
.head {
  position: relative;
  top: -50rpx;
  width: 100%;
  padding: 40rpx 0;
  background: #FFFFFF;
  border-radius: 50rpx 50rpx 0 0;
}
.head .add-button {
  margin: 0 auto;
  width: 85%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
  background: #05C697;
  border-radius: 50rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}
.head .select-area {
  padding: 40rpx 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.head .select-area .select-text {
  font-size: 30rpx;
  color: #333333;
}
.list {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx 10rpx;
}
.list .list-item {
  position: relative;
  margin-bottom: 30rpx;
  width: 100%;
  height: 370rpx;
  background: #FFFFFF;
  border-radius: 10rpx;
}
.list .list-item .list-area {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  border-radius: 50rpx;
  background: rgba(0, 0, 0, 0.2);
}
.list .list-item image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.list .list-item .list-info {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 0 0 10rpx 10rpx;
}
.list .list-item .list-info .list-name {
  padding-left: 20rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}
.list .list-item .list-info .list-button {
  margin-right: 20rpx;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #FFFFFF;
  background: rgba(5, 198, 151, 0.8);
  border-radius: 10rpx;
}

