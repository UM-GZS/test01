.head {
  position: relative;
  margin-bottom: 10rpx;
  width: 100%;
  height: 370rpx;
  background: #FFFFFF;
  border-radius: 10rpx;
}
.head .head-area {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  border-radius: 50rpx;
  background: rgba(0, 0, 0, 0.2);
}
.head image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.head .head-info {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 0 0 10rpx 10rpx;
}
.head .head-info .head-name {
  padding-left: 20rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}
.head .head-info .head-button {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}
.head .head-info .head-button text {
  font-size: 28rpx;
  color: #FFFFFF;
}
.head .head-info .head-button image {
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.list {
  padding: 0 20rpx;
  background: #FFFFFF;
}
.list .list-item {
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #F8F8F8;
}
.list .list-item .list-icon {
  width: 100rpx;
  height: 100rpx;
}
.list .list-item .list-icon image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.list .list-item .list-info {
  width: calc(100% - 120rpx);
}
.list .list-item .list-info .list-name {
  width: 100%;
  font-size: 30rpx;
  color: #333333;
}
.list .list-item .list-info .list-address {
  padding: 10rpx 0;
  width: 100%;
  display: flex;
  align-items: center;
}
.list .list-item .list-info .list-address text {
  font-size: 26rpx;
  color: #C1BEC1;
}
.list .list-item .list-info .list-address text:nth-child(2) {
  padding-left: 20rpx;
}
.list .list-item .list-info .list-text {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list .list-item .list-info .list-text text {
  font-size: 26rpx;
  color: #C1BEC1;
}
.list .list-item .list-info .list-text text:nth-child(2) {
  font-size: 28rpx;
  color: #05C697;
}
.null {
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.null image {
  width: 90rpx;
  height: 90rpx;
}
.null text {
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #C1BEC1;
}

